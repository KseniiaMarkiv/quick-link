<%# app/views/suppliers/_form.html.erb %>
<div class="row justify-content-center">
  <div class="col-12 col-md-10 col-lg-8 col-xl-6">
    <div class="card shadow-sm">
      <div class="card-body">
        <h1 class="h4 mb-3"><%= supplier.persisted? ? "Editing supplier" : "New supplier" %></h1>

        <% if supplier.errors.any? %>
          <div class="alert alert-danger">
            <h2 class="h6 mb-2"><%= pluralize(supplier.errors.count, "error") %> prohibited this supplier from being saved:</h2>
            <ul class="mb-0">
              <% supplier.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with(model: supplier, html: { class: "needs-validation" }) do |f| %>
          <div class="row g-3">
            <div class="col-12 col-sm-4">
              <%= f.label :no, class: "form-label" %>
              <%= f.number_field :no, class: "form-control form-control-sm", min: 0, step: 1 %>
            </div>

            <div class="col-12">
              <%= f.label :category, class: "form-label" %>
              <%= f.text_field :category, class: "form-control form-control-sm" %>
            </div>

            <div class="col-12">
              <%= f.label :group_by_color, class: "form-label" %>
              <%= f.text_field :group_by_color, class: "form-control form-control-sm" %>
            </div>

            <div class="col-12">
              <%= f.label :name, class: "form-label" %>
              <%= f.text_field :name, class: "form-control form-control-sm" %>
            </div>

            <div class="col-12">
              <%= f.label :sku, class: "form-label" %>
              <%= f.text_field :sku, class: "form-control form-control-sm" %>
            </div>

            <div class="col-12">
              <%= f.label :link, class: "form-label" %>
              <%= f.url_field :link, class: "form-control form-control-sm", placeholder: "https://…" %>
            </div>

            <div class="col-12 d-flex gap-4">
              <div class="form-check form-switch">
                <%= f.check_box :active, class: "form-check-input", id: "supplier_active" %>
                <%= f.label :active, "Active", class: "form-check-label", for: "supplier_active" %>
              </div>
              <div class="form-check form-switch">
                <%= f.check_box :inactive, class: "form-check-input", id: "supplier_inactive" %>
                <%= f.label :inactive, "Inactive", class: "form-check-label", for: "supplier_inactive" %>
              </div>
            </div>

            <div class="col-12 d-grid">
              <%= f.submit (supplier.persisted? ? "Save changes" : "Create supplier"),
                    class: "btn btn-primary btn-sm",
                    data: { disable_with: "Saving…" } %>
            </div>

            <div class="col-12 d-flex justify-content-between">
              <%= link_to "Back to suppliers", suppliers_path, class: "btn btn-outline-secondary btn-sm" %>
              <% if supplier.persisted? %>
                <%= link_to "Show this supplier", @supplier, class: "btn btn-outline-primary btn-sm" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
