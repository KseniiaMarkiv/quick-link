<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h4 m-0">Suppliers Warehouse Table</h1>

  <div class="fixed-actions">
    <a class="btn btn-primary btn-sm" href="<%= new_supplier_path %>">Add data</a>
    <a class="btn btn-outline-secondary btn-sm ms-2" href="<%= import_form_suppliers_path %>">Import from Excel</a>
    <a class="btn btn-warning btn-sm ms-2" href="<%= download_xlsx_suppliers_path %>">Download XLSX format</a>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-sm align-middle">
    <thead class="table-light">
      <tr>
        <th>No</th>
        <th>Category</th>
        <th>Group by color</th>
        <th>Name</th>
        <th class="sku-col">SKU</th>
        <th>Active</th>
        <th>Inactive</th>
        <th class="link-col">Link</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier| %>
        <tr>
          <td><%= supplier.no %></td>
          <td><%= supplier.category %></td>
          <td><%= supplier.group_by_color %></td>
          <td><%= supplier.name %></td>
          <td class="sku-col"><%= supplier.sku %></td>
          <td><input class="form-check-input" type="checkbox" disabled <%= "checked" if supplier.active %>></td>
          <td><input class="form-check-input" type="checkbox" disabled <%= "checked" if supplier.inactive %>></td>
          <td>
            <% if supplier.link.present? %>
              <a class="btn btn-outline-primary btn-sm" href="<%= supplier.link %>" target="_blank" rel="noopener">Link</a>
            <% else %>
              <span class="text-muted">—</span>
            <% end %>
          </td>
          <td class="text-end">
            <div class="options-menu">
              <button class="btn btn-outline-secondary btn-sm options-toggle" aria-haspopup="true" aria-expanded="false">
                ⋯ Options
              </button>
              <div class="menu">
                <%= link_to "Open", supplier, class: "btn btn-sm btn-primary" %>
                <%= link_to "Edit", edit_supplier_path(supplier), class: "btn btn-sm btn-warning" %>
                <%= button_to "Delete", supplier,
                      method: :delete,
                      class: "btn btn-sm btn-danger",
                      form: { data: { turbo_confirm: "Delete this row?" } } %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
