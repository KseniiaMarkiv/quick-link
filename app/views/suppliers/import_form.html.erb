<h1 class="h5 mb-3">Import Suppliers from Excel</h1>

<div class="card">
  <div class="card-body">
    <%= form_with url: import_from_excel_suppliers_path, html: { multipart: true } do |f| %>
      <div class="mb-3">
        <label class="form-label">Choose .xlsx (or .xls)</label>
        <%= file_field_tag :file, accept: ".xlsx,.xls", class: "form-control" %>
      </div>

      <div class="d-flex gap-2">
        <%= f.submit "Import", class: "btn btn-primary" %>
        <%= link_to "Back", suppliers_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>

    <p class="mt-3 text-danger small">
      Expected headers:
      <strong>No, Category, Group by color, Name, SKU, Active, Inactive, link</strong>
    </p>
  </div>
</div>
