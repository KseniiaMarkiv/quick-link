<p style="color: green"><%= notice %></p>

<%= render @supplier %>

<div class="d-flex gap-2 mt-3">
  <%= link_to "Edit this supplier", edit_supplier_path(@supplier),
              class: "btn btn-warning btn-sm px-4" %>

  <%= link_to "Back to suppliers", suppliers_path,
              class: "btn btn-secondary btn-sm px-4" %>

  <%= button_to "Destroy this supplier", @supplier,
                method: :delete,
                form: { data: { turbo_confirm: "Are you sure you want to delete this supplier?" } },
                class: "btn btn-danger btn-sm px-4" %>
</div>
