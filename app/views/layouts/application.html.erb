<!DOCTYPE html>
<html>
  <head>
    <title>Suppliers Warehouse</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <!-- Bootstrap 5.3 (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <%# Sprockets assets %>
    <%= stylesheet_link_tag :app, media: "all" %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app %>
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand fw-semibold" href="<%= root_path %>">Suppliers Warehouse Table</a>
        <div class="ms-auto">
          <a class="btn btn-outline-light btn-sm" href="<%= import_form_suppliers_path %>">Import from Excel</a>
          <a class="btn btn-warning btn-sm ms-2" href="<%= download_xlsx_suppliers_path %>">Download XLSX format</a>
        </div>
      </div>
    </nav>

    <div class="container-fluid p-5">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
          <div><%= notice %></div>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
          <div><%= alert %></div>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <%= yield %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
    <%= javascript_include_tag :app, defer: true %>

  </body>
</html>
