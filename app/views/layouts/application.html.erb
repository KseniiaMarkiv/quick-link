<!DOCTYPE html>
<html>
  <head>
    <title>Suppliers Warehouse</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <!-- Bootstrap 5.3 (CDN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Toggle on click (for mobile / keyboard). Close on outside click or Esc.
        document.querySelectorAll('.options-toggle').forEach(btn => {
          btn.addEventListener('click', (e) => {
            e.preventDefault();
            const menuWrap = btn.closest('.options-menu');
            // close others
            document.querySelectorAll('.options-menu.is-open').forEach(w => { if (w!==menuWrap) w.classList.remove('is-open'); });
            menuWrap.classList.toggle('is-open');
          });
        });
        document.addEventListener('click', (e) => {
          if (!e.target.closest('.options-menu')) {
            document.querySelectorAll('.options-menu.is-open').forEach(w => w.classList.remove('is-open'));
          }
        });
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape') {
            document.querySelectorAll('.options-menu.is-open').forEach(w => w.classList.remove('is-open'));
          }
        });
      });
    </script>

    <script>
      // Global confirm for any <form data-turbo-confirm="..."> or data-confirm="...".
      // Works without Turbo or Rails-UJS. Captures before the submit reaches the server.
      (function () {
        document.addEventListener('submit', function (e) {
          const form = e.target;
          if (!(form instanceof HTMLFormElement)) return;

          const msg = form.dataset.turboConfirm || form.dataset.confirm;
          if (!msg) return;

          if (!window.confirm(msg)) {
            e.preventDefault();
            e.stopImmediatePropagation();
          }
        }, true); // capture so we run before anything else
      })();
    </script>


    <style>
      /* tiny helpers to resemble your screenshots */
      .table thead th { white-space: nowrap; }
      .sku-col { font-family: ui-monospace, "SFMono-Regular", Menlo, Consolas, monospace; font-size: .9rem; }
      .link-col { width: 90px; }
      .fixed-actions { position: sticky; top: 0; background: #fff; z-index: 1020; padding: .5rem 0; }
    </style>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app %>
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand fw-semibold" href="<%= root_path %>">Suppliers Warehouse Table</a>
        <div class="ms-auto">
          <a class="btn btn-outline-light btn-sm" href="<%= import_form_suppliers_path %>">Import from Excel</a>
          <a class="btn btn-warning btn-sm ms-2" href="<%= download_xlsx_suppliers_path %>">Download XLSX format</a>
        </div>
      </div>
    </nav>

    <div class="container-fluid p-5">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
          <div><%= notice %></div>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
          <div><%= alert %></div>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
